{
  "name": "gem-book",
  "version": "0.0.18",
  "description": "",
  "main": "dist/index.js",
  "module": "index.js",
  "bin": "bin/index.js",
  "files": [
    "/bin/",
    "/dist/",
    "/index.js",
    "/index.js.map",
    "/index.d.ts",
    "/index.d.ts.map",
    "/elements/",
    "/lib/",
    "/src/",
    "/helper/"
  ],
  "typings": "index.d.ts",
  "scripts": {
    "lint": "tsc --noEmit && eslint --ext .ts --fix src/",
    "clean": "node -e \"fs.readdirSync('src').map(dir => require('rimraf').sync(dir))\"",
    "watch": "tsc --watch",
    "docs": "node ./bin docs --i18n --debug -t Gem-book -i /logo.png",
    "dev:docs": "nodemon --watch bin --exec \"npm run docs -- --watch\"",
    "dev:website": "webpack-dev-server",
    "build:module": "npm run clean && tsc",
    "build:dist": "rimraf dist && webpack --config webpack.config.dist.js",
    "build": "npm run build:module && npm run build:dist",
    "prepare": "npm run lint && npm run build && npm run docs",
    "build:website": "npm run build:module && npm run docs && webpack",
    "test": "npm run build && karma start --coverage",
    "test:bs": "npm run build &&  karma start karma.bs.config.js --coverage"
  },
  "author": "mantou132",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mantou132/gem-book.git"
  },
  "license": "ISC",
  "dependencies": {
    "@mantou/gem": "^0.4.9",
    "commander": "^4.1.1",
    "front-matter": "^4.0.2",
    "git-remote-origin-url": "^3.1.0",
    "git-repo-info": "^2.1.1",
    "jsdom": "^16.4.0",
    "lodash": "^4.17.20",
    "marked": "^0.8.2",
    "mkdirp": "^0.5.5",
    "parse-github-url": "^1.0.2",
    "prismjs": "^1.22.0",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.5.29",
    "@open-wc/testing-karma": "^3.4.8",
    "@open-wc/testing-karma-bs": "^1.3.94",
    "@types/jsdom": "^12.2.4",
    "@types/lodash": "^4.14.162",
    "@types/marked": "^0.7.4",
    "@types/mkdirp": "^0.5.2",
    "@types/parse-github-url": "^1.0.0",
    "@types/prismjs": "^1.16.1",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "cross-env": "^6.0.3",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.6",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
