{
  "name": "gem-book",
  "version": "0.0.13",
  "description": "",
  "main": "dist/index.js",
  "module": "index.js",
  "bin": "bin/index.js",
  "files": [
    "/bin/",
    "/dist/",
    "/index.js",
    "/index.js.map",
    "/index.d.ts",
    "/index.d.ts.map",
    "/elements/",
    "/lib/",
    "/src/",
    "/helper/"
  ],
  "typings": "index.d.ts",
  "scripts": {
    "lint": "tsc --noEmit && eslint --ext .ts --fix src/",
    "clean": "node -e \"fs.readdirSync('src').map(dir => require('rimraf').sync(dir))\"",
    "watch": "tsc --watch",
    "docs": "node ./bin src/examples/hello/docs -o src/examples/hello --i18n --watch --debug -t Gem-book -i /logo.png",
    "build:module": "npm run clean && tsc",
    "build:dist": "rimraf dist && webpack --config webpack.config.dist.js",
    "build": "npm run build:module && npm run build:dist",
    "prepare": "npm run lint && npm run build",
    "example": "webpack-dev-server",
    "test": "npm run build && karma start --coverage",
    "test:bs": "npm run build &&  karma start karma.bs.config.js --coverage"
  },
  "author": "mantou132",
  "license": "ISC",
  "dependencies": {
    "@mantou/gem": "^0.4.8",
    "colors": "^1.4.0",
    "commander": "^4.1.0",
    "front-matter": "^4.0.2",
    "git-remote-origin-url": "^3.0.0",
    "git-repo-info": "^2.1.1",
    "jsdom": "^16.0.1",
    "lodash": "^4.17.20",
    "marked": "^0.8.0",
    "mkdirp": "^0.5.1",
    "prismjs": "^1.19.0",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.4.2",
    "@open-wc/testing-karma": "^3.2.14",
    "@open-wc/testing-karma-bs": "^1.3.14",
    "@types/jsdom": "^12.2.4",
    "@types/lodash": "^4.14.162",
    "@types/marked": "^0.7.2",
    "@types/mkdirp": "^0.5.2",
    "@types/prismjs": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "html-webpack-plugin": "^4.0.0-beta.11",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
